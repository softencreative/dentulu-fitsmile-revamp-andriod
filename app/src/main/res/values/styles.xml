    </style>

    <style name="commonButtonStroke">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_btn_default_stroke</item>
        <item name="android:textColor">@color/side_menu_txt</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:textSize">@dimen/_14sdp</item>
