        <item name="android:textAllCaps">false</item>
    </style>
    <style name="commonButtonStrokeLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_bottom_white</item>
        <item name="android:textColor">@color/side_menu_txt</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppThemeRatingBar" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="ratingBarStyle">@style/feedBackRating</item>
    </style>
    <style name="feedBackRating" parent="AppThemeRatingBar">
        <item name="android:minHeight">@dimen/_25sdp</item>
        <item name="android:minWidth">@dimen/_25sdp</item>
        <item name="android:progressDrawable">@drawable/rating_bar_bg</item>
    </style>

    <style name="viewPagerTab" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_16sdp</item>
<!--        <item name="textSize">@dimen/_16sdp</item>-->
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="imgView">
        <item name="android:layout_width">@dimen/_60sdp</item>
        <item name="android:layout_height">@dimen/_60sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="SwitchStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorSwitchThumbNormal">@color/profile_grey</item>
        <item name="android:colorForeground">@color/colorAccent</item>
    </style>
    <style name="MySeekBarTheme" parent="Widget.AppCompat.SeekBar" >
        <item name="colorAccent">@color/red</item>
    </style>
    <style name="NumberPickerStyle">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/proxima_nova_regular</item>
    </style>
    <style name="CustomProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_progress_layout</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <style name="CustomProgressBarGoal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>
</resources>