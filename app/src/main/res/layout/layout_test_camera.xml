<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fitsreminder.TeethSefieActivity">

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:theme="@style/ToolBarStyle" />

        </com.google.android.material.appbar.AppBarLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/commonLabelTextViewBold"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_14sdp"
                    android:text="@string/lbl_photo_send_instruction" />

                <TextView
                    style="@style/commonLabelTextViewBold"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_14sdp"
                    android:text="@string/lbl_front" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/frontImage"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/front_teeth" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        app:cardCornerRadius="20dp"
                        app:cardPreventCornerOverlap="false">

                        <ImageView
                            android:id="@+id/frontCameraBtn"
                            android:layout_width="@dimen/_122sdp"
                            android:layout_height="@dimen/_122sdp"
                            android:focusable="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/camera_icon" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


                <TextView
                    style="@style/commonLabelTextViewBold"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_14sdp"
                    android:text="@string/lbl_right" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/rightImage"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/rightteeth" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        app:cardCornerRadius="20dp"
                        app:cardPreventCornerOverlap="false">

                        <ImageView
                            android:id="@+id/rightCameraBtn"
                            android:layout_width="@dimen/_122sdp"
                            android:layout_height="@dimen/_122sdp"
                            android:focusable="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/camera_icon" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


                <TextView
                    style="@style/commonLabelTextViewBold"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_14sdp"
                    android:text="@string/lbl_left" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/leftImage"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/left_teeth" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        app:cardCornerRadius="20dp"
                        app:cardPreventCornerOverlap="false">

                        <ImageView
                            android:id="@+id/leftCameraBtn"
                            android:layout_width="@dimen/_122sdp"
                            android:layout_height="@dimen/_122sdp"
                            android:focusable="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/camera_icon" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


                <TextView
                    style="@style/commonLabelTextViewBold"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_14sdp"
                    android:text="@string/lbl_up" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/upImage"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/up_teeth" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        app:cardCornerRadius="20dp"
                        app:cardPreventCornerOverlap="false">

                        <ImageView
                            android:id="@+id/upCameraBtn"
                            android:layout_width="@dimen/_122sdp"
                            android:layout_height="@dimen/_122sdp"
                            android:focusable="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/camera_icon" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <TextView
                    style="@style/commonLabelTextViewBold"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_14sdp"
                    android:text="@string/lbl_down" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/downImage"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/down_teeth" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        app:cardCornerRadius="20dp"
                        app:cardPreventCornerOverlap="false">

                        <ImageView
                            android:id="@+id/downCameraBtn"
                            android:layout_width="@dimen/_122sdp"
                            android:layout_height="@dimen/_122sdp"
                            android:focusable="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/camera_icon" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/cancel"
                        style="@style/commonButtonSolidGrey"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:text="@string/cancel" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/submit"
                        style="@style/commonButtonSolidGrey"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:text="@string/submit" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/camera_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_gray"
        android:visibility="gone">

        <com.app.fitsmile.fitsreminder.AutoFitTextureView
            android:id="@+id/texture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true" />

        <ImageView
            android:id="@+id/imageClick"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_220sdp"
            android:layout_marginTop="@dimen/_60sdp" />

        <RelativeLayout
            android:id="@+id/layoutImages"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@+id/textBottom"
            android:layout_below="@+id/textFront"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_30sdp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_frame" />

<!--            <ImageView-->
<!--                android:id="@+id/imageRound"-->
<!--                android:layout_width="@dimen/_90sdp"-->
<!--                android:layout_height="@dimen/_50sdp"-->
<!--                android:layout_centerInParent="true"-->
<!--                android:src="@drawable/ic_front_teeth_layout"-->
<!--                android:visibility="gone"/>-->
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layoutIcons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_gray"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/closeCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="@dimen/_10sdp"
                app:srcCompat="@drawable/ic_close_24"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/switchCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="@dimen/_10sdp"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_baseline_flip_camera_ios_24"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/flashOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="@dimen/_10sdp"
                app:srcCompat="@drawable/ic_flash_off" />


            <ImageView
                android:id="@+id/imageZoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="@dimen/_10sdp"
                app:srcCompat="@drawable/ic_zoom_in" />

            <ImageView
                android:id="@+id/imageSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="@dimen/_10sdp"
                app:srcCompat="@drawable/ic_check_24" />
        </LinearLayout>

        <TextView
            android:id="@+id/textFront"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutIcons"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_40sdp"
            android:fontFamily="@font/proxima_nova_bold"
            android:gravity="center"
            android:text="@string/camera_text"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sp" />

        <TextView
            android:id="@+id/textBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/layoutBottomIcons"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_40sdp"
            android:fontFamily="@font/proxima_nova_bold"
            android:gravity="center"
            android:text="@string/tap_to_take_photo"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sp"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/layoutBottomIcons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:visibility="invisible">

            <TextView
                android:id="@+id/text_left_teeth"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/bg_radio_btn_one_selector_select"
                android:fontFamily="@font/proxima_nova_bold"
                android:gravity="center"
                android:padding="@dimen/_15sdp"
                android:text="@string/lbl_left"

                android:textColor="@color/black"
                android:textSize="@dimen/_16sp" />

            <TextView
                android:id="@+id/text_right_teeth"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/bg_radio_btn_one_selector_select"
                android:fontFamily="@font/proxima_nova_bold"
                android:gravity="center"
                android:padding="@dimen/_15sdp"
                android:text="@string/lbl_right"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sp" />

            <TextView
                android:id="@+id/text_front_teeth"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/bg_radio_btn_one_selector"
                android:fontFamily="@font/proxima_nova_bold"
                android:gravity="center"
                android:padding="@dimen/_15sdp"
                android:text="@string/lbl_front"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layoutbottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:layout_alignParentBottom="true"
            android:background="@color/black_gray"
            android:visibility="visible">

            <ImageView
                android:id="@+id/captureBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="@dimen/_5sdp"
                android:paddingBottom="@dimen/_40sdp"
                app:srcCompat="@drawable/ic_baseline_camera_24" />

            <ImageView
                android:id="@+id/imageRound"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:scaleType="fitXY"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_20sdp"
               android:layout_below="@+id/captureBtn"
                android:src="@drawable/front_teeth"
                android:visibility="gone"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>