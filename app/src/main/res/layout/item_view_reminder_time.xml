<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cardPushNotification"
    android:layout_margin="@dimen/_5sdp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_alignTop="@+id/textReminderTime"
            android:layout_alignBottom="@+id/textReminderTime"
            android:id="@+id/imagePlay"
            android:src="@drawable/ic_play_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:visibility="gone"
            android:layout_marginStart="@dimen/_4sdp"
            android:id="@+id/textHeaderReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/breakfast"
            android:fontFamily="@font/proxima_nova_bold"
            android:textColor="@color/black_light"
            android:textSize="@dimen/_14sp"
            android:layout_toEndOf="@+id/imagePlay"/>

        <TextView
            android:padding="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_below="@+id/textHeaderReminder"
            android:id="@+id/textReminderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30 mins"
            android:textSize="@dimen/_14sp"
            android:fontFamily="@font/proxima_nova_regular"
            android:textColor="@color/black_light"
            android:layout_toEndOf="@+id/imagePlay"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>