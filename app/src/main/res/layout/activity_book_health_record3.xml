<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:visibility="gone"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llStep3"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="@dimen/fab_margin">

    <TextView
        android:textStyle="bold"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/colorPrimary"
        android:text="@string/hr_medcondition_head"
        style="@style/commonTextView12"/>

    <CheckBox style="@style/checkBox" android:id="@+id/switchTouchID3" android:text="@string/hr_medcondition_body"/>

    <LinearLayout
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_medcondition"
        android:orientation="vertical">
        <TextView style="@style/commonTextView"
            android:gravity="start"
            android:layout_marginBottom="@dimen/_14sdp"
            android:textColor="@color/colorPrimary"
            android:text="@string/hr_medcondition_yes"/>
        <CheckBox style="@style/checkBox" android:id="@+id/cb_medcondition_type1" android:text="@string/hr_medcondition_type1"/>
        <CheckBox style="@style/checkBox" android:id="@+id/cb_medcondition_type2" android:text="@string/hr_medcondition_type2"/>
        <CheckBox style="@style/checkBox" android:id="@+id/cb_medcondition_type3" android:text="@string/hr_medcondition_type3"/>
        <CheckBox style="@style/checkBox" android:id="@+id/cb_medcondition_type4" android:text="@string/hr_medcondition_type4"/>
        <CheckBox style="@style/checkBox" android:id="@+id/cb_medcondition_type5" android:text="@string/hr_medcondition_type5"/>
        <CheckBox style="@style/checkBox" android:id="@+id/cb_medcondition_type6" android:text="@string/hr_medcondition_type6"/>
        <CheckBox style="@style/checkBox" android:id="@+id/cb_medcondition_type7" android:text="@string/hr_medcondition_type7"/>
        <CheckBox style="@style/checkBox" android:id="@+id/cb_medcondition_type8" android:text="@string/hr_medcondition_type8"/>
        <CheckBox style="@style/checkBox" android:id="@+id/cb_medcondition_type9" android:text="@string/hr_medcondition_type9"/>
        <CheckBox style="@style/checkBox" android:id="@+id/cb_medcondition_type10" android:text="@string/hr_medcondition_type10"/>
        <CheckBox style="@style/checkBox" android:id="@+id/cb_medcondition_type11" android:text="@string/hr_medcondition_type11"/>
        <CheckBox style="@style/checkBox" android:id="@+id/cb_medcondition_type12" android:text="@string/hr_medcondition_type12"/>

        <com.google.android.material.textfield.TextInputLayout style="@style/commonTextInputLayout">
            <EditText
                style="@style/commonEditText"
                android:id="@+id/et_medcondition_other"
                android:hint="@string/hr_medcondition_type13"
                android:inputType="textCapSentences"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:id="@+id/btnBackStep3"
            android:layout_marginEnd="@dimen/_5sdp"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/btn_circle_white"
            android:text="@string/BACK"/>
        <TextView
            android:padding="@dimen/_10sdp"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginStart="@dimen/_5sdp"
            android:id="@+id/btnNextStep3"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/button_defaults"
            android:text="@string/NEXT" />
    </LinearLayout>


</LinearLayout>
