<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/_20sdp">

    <ProgressBar
        android:id="@+id/loadingProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/dataLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/earnAmountTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/earn_10"
            android:fontFamily="@font/proxima_nova_bold"
            android:textColor="@color/color_selected_tab"
            android:textSize="@dimen/_14sdp"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/proxima_nova_regular"
            android:text="@string/invite_your_friends_and_family" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/proxima_nova_light"
            android:text="@string/your_invite_code"
            android:textColor="@color/light_grey_color"/>

        <TextView
            android:id="@+id/couponCodeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/bg_invite"
            android:fontFamily="@font/proxima_nova_bold"
            android:textColor="@color/color_selected_tab" />

        <TextView
            android:id="@+id/t_and_c_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:text="@string/t_c_apply"
            android:fontFamily="@font/proxima_nova_bold"
            android:textColor="@color/light_grey_color"
            android:textSize="@dimen/_12sdp" />

        <ImageView
            android:id="@+id/shareBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            app:tint="@color/colorPrimary"
            android:src="@drawable/ic_share" />

    </LinearLayout>

</LinearLayout>