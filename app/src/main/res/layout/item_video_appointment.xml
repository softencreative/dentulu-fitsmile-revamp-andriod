<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"
    android:background="@color/white"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="0dp"
    app:cardElevation="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                style="@style/commonLabelTextView"
                android:text="@string/appointment_id" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                style="@style/commonLabelTextView"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="end"
                android:fontFamily="@font/proxima_nova_bold"
                android:singleLine="true"
                android:text="@string/id" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                style="@style/commonLabelTextView"
                android:text="@string/dentist_name" />

            <TextView
                android:id="@+id/tv_doc_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_weight="1"
                android:gravity="end"
                android:singleLine="true"
                android:ellipsize="end"
                style="@style/commonLabelTextView"
                android:fontFamily="@font/proxima_nova_bold"
                android:text="@string/doc_name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                style="@style/commonLabelTextView"
                android:text="@string/status_of_consul" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <TextView
                android:id="@+id/tv_status_of_consult"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:gravity="end"
                android:singleLine="true"
                android:layout_alignParentEnd="true"
                android:ellipsize="end"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_16sdp"
                android:background="@drawable/bg_cornor_highlight"
                style="@style/commonLabelTextView"
                android:textColor="@color/white"
                android:fontFamily="@font/proxima_nova_bold"
                android:text="@string/completed" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_call_duration"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                style="@style/commonLabelTextView"
                android:text="@string/call_duration" />

            <TextView
                android:id="@+id/tv_call_duration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_weight="1"
                android:gravity="end"
                android:singleLine="true"
                android:ellipsize="end"
                style="@style/commonLabelTextView"
                android:fontFamily="@font/proxima_nova_bold"
                android:text="@string/duration" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                style="@style/commonLabelTextView"
                android:text="@string/created_on" />

            <TextView
                android:id="@+id/tv_created_on"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_weight="1"
                android:gravity="end"
                android:singleLine="true"
                android:ellipsize="end"
                style="@style/commonLabelTextView"
                android:fontFamily="@font/proxima_nova_bold"
                android:text="@string/date" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_view_full_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:fontFamily="@font/sofia_pro_regular"
            android:layout_marginTop="@dimen/_9sdp"
            android:layout_marginBottom="@dimen/_14sdp"
            android:text="@string/view_full_details"
            android:textColor="@color/tool_bar_text_color" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
