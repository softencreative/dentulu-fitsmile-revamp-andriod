<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_select_language"
        android:background="@drawable/bg_btn_white_stroke"
        android:text="@string/language"
        android:layout_margin="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_5sdp"
        android:layout_gravity="end"
        android:textColor="@color/white"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="@dimen/_50sdp"
        android:src="@drawable/ic_logo_white" />


        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/ll_login"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_28sdp"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/commonTextViewLogin"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/proxima_nova_bold"
                android:text="@string/login_to_fits_account"
                android:textSize="@dimen/_26sdp" />
<!--            android:text="@string/login_register"-->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_register"
                style="@style/commonButtonSolid"
                android:background="@drawable/bg_btn_white_stroke"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:visibility="gone"
                android:text="@string/register" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_login"
                style="@style/commonButtonSolid"
                android:layout_marginTop="16dp"
                android:layout_marginStart="@dimen/_16sdp"
                android:background="@drawable/bg_btn_white_stroke"
                android:layout_marginEnd="@dimen/_16sdp"
                android:text="@string/login" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_touch_here"
                style="@style/commonTextView"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:text="@string/dentist_touch_here"/>

        </LinearLayout>
</LinearLayout>




