<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:layout_marginTop="@dimen/_10sdp"
    android:elevation="12dp"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="6dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">


            <LinearLayout
                android:id="@+id/ll_treatment_brief"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="vertical"
                android:visibility="visible">


                <TextView
                    android:id="@+id/tv_label_estimated_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:singleLine="true"
                    android:text="@string/lbl_estimated_cost"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    style="@style/commonLabelTextViewLight"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_label_no_of_appointment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:singleLine="true"
                    android:text="@string/lbl_no_of_appointment"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_no_of_appointment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    style="@style/commonLabelTextViewLight"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_label_clinical_evaluation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:text="@string/lbl_clinical_evaluation"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_clinical_evaluation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    style="@style/commonLabelTextViewLight"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_label_treatment_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_treatment_type"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_treatment_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/lbl_conventional_dentures"
                    style="@style/commonLabelTextViewLight"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tv_label_before_after_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:singleLine="true"
                    android:text="@string/lbl_before_after_image"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_about_before_after_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    style="@style/commonLabelTextViewLight"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/ll_before_after_image_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_before_image"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:elevation="12dp"
                        app:cardCornerRadius="6dp">

                        <ImageView
                            android:id="@+id/iv_before_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/image_placeholder" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_after_image"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="16dp"
                        android:elevation="12dp"
                        app:cardCornerRadius="6dp">

                        <ImageView
                            android:id="@+id/iv_after_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/image_placeholder" />
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <TextView
                    android:id="@+id/tv_label_special_offer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:singleLine="true"
                    android:text="@string/lbl_special_offer"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_special_offer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    style="@style/commonLabelTextViewLight"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_label_estimated_insurance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:singleLine="true"
                    android:text="@string/lbl_estimated_insurance_coverage"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_estimated_insurance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    style="@style/commonLabelTextViewLight"
                    android:textSize="15sp" />


            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.cardview.widget.CardView>
