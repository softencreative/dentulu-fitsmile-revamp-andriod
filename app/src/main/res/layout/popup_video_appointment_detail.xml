<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/bg_bottom_corner_white"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:padding="@dimen/_14sdp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <TextView
                style="@style/commonLabelTextView"
                android:layout_width="match_parent"
                android:gravity="center"
                android:text="@string/appointment_details"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:orientation="horizontal">

                <TextView
                    style="@style/commonLabelTextView"
                    android:text="@string/appointment_id"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_appointment_id"
                    android:layout_width="0dp"
                    style="@style/commonLabelTextView"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:singleLine="true"
                    android:text="@string/id" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/commonLabelTextView"
                    android:text="@string/date_time"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_date_time"
                    android:layout_width="0dp"
                    style="@style/commonLabelTextView"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:singleLine="true"
                    android:text="@string/date" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/commonLabelTextView"
                    android:textColor="@color/black"
                    android:text="@string/services"/>

                <TextView
                    android:id="@+id/tv_service"
                    android:layout_width="0dp"
                    style="@style/commonLabelTextView"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:singleLine="true"
                    android:text="@string/virtual_appointment" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/commonLabelTextView"
                    android:textColor="@color/black"
                    android:text="@string/status_of_consult" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_status_of_consult"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:gravity="end"
                        android:singleLine="true"
                        android:layout_alignParentEnd="true"
                        android:ellipsize="end"
                        android:paddingStart="@dimen/_16sdp"
                        android:paddingEnd="@dimen/_16sdp"
                        android:background="@drawable/bg_cornor_highlight"
                        style="@style/commonLabelTextView"
                        android:textColor="@color/white"
                        android:fontFamily="@font/proxima_nova_bold"
                        android:text="@string/completed" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/commonLabelTextView"
                    android:text="@string/dentist_name"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_dentist_name"
                    android:layout_width="0dp"
                    style="@style/commonLabelTextView"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:singleLine="true"
                    android:text="@string/doc_name" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/commonLabelTextView"
                    android:text="@string/call_durations"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:id="@+id/tv_duration"
                    style="@style/commonLabelTextView"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:singleLine="true"
                    android:text="@string/mins_value" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/commonLabelTextView"
                    android:text="@string/discount_cost"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_discount_amt"
                    android:layout_width="0dp"
                    style="@style/commonLabelTextView"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:singleLine="true"
                    android:text="@string/discount_dollar" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/commonLabelTextView"
                    android:text="@string/total_cost"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:id="@+id/tv_paid_amt"
                    style="@style/commonLabelTextView"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:singleLine="true"
                    android:text="@string/dollar" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_28sdp"
                android:layout_marginBottom="@dimen/_28sdp"
                android:visibility="visible"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imv_chat"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_chat_appointment" />

                <ImageView
                    android:id="@+id/imv_call"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_call_appointment" />
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
